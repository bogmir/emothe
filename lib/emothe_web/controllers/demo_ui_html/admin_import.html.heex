<div class="mx-auto max-w-5xl px-4 py-8">
  <div class="mb-6">
    <h1 class="text-3xl font-semibold tracking-tight text-base-content">
      Import TEI-XML Files
    </h1>
    <p class="mt-1 text-sm text-base-content/70">
      Import one or many TEI files and review successful ingestions.
    </p>
  </div>

  <div class="card mb-6 border border-base-300 bg-base-100 shadow-sm">
    <div class="card-body">
      <h2 class="card-title">Select Files</h2>
      <p class="mb-3 text-sm text-base-content/70">
        Choose one or more TEI-XML files from your computer.
      </p>

      <div class="rounded-box bg-base-200 px-3 py-3 border border-base-300">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <div>
            <p class="text-sm font-medium text-base-content">Demo page</p>
            <p class="text-xs text-base-content/60">
              File upload is disabled (CSS-only snapshot).
            </p>
          </div>
          <a href="/demo/ui" class="btn btn-sm btn-ghost">Back</a>
        </div>

        <div class="mt-3 flex flex-wrap gap-2">
          <a href="/demo/ui/admin/import" class="btn btn-sm btn-outline">Normal</a>
          <a href="/demo/ui/admin/import?flash=duplicate" class="btn btn-sm btn-error">
            Duplicate flash
          </a>
          <a href="/demo/ui/admin/import?flash=success" class="btn btn-sm btn-success">
            Success flash
          </a>
        </div>
      </div>
    </div>
  </div>

  <div :if={@successes != []} class="card border border-base-300 bg-base-100 shadow-sm">
    <div class="card-body">
      <h2 class="card-title">Imported Plays</h2>
      <div class="overflow-x-auto">
        <table class="table table-sm">
          <thead>
            <tr>
              <th>File</th>
              <th>Title</th>
              <th>Code</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr :for={{filename, title, code} <- @successes}>
              <td class="font-mono text-xs">{filename}</td>
              <td>{title}</td>
              <td>
                <span class="badge badge-primary badge-sm">{code}</span>
              </td>
              <td>
                <a href="/demo/ui/public/play" class="btn btn-xs btn-ghost">
                  View
                </a>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="card-actions mt-4">
        <a href="/demo/ui/admin/plays" class="btn btn-sm btn-outline">
          View all plays
        </a>
      </div>
    </div>
  </div>
</div>
